<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/btech" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:layout_margin="5dp"
                android:text="@string/btech_into" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some Field of Computer Science"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="380dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/app_developer" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="380dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/web_developer" />
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="380dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/graphic_designing" />
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="380dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/game_developer" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>